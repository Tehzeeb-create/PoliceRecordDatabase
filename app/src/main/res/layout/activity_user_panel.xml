<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPanel"
    >

    <!-- Image Button for "Enter Record" -->

    <!-- Image Button for "Generate Record" -->

    <ImageButton
        android:id="@+id/enterRecordButton"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rounded_crop"
        android:contentDescription="Enter Record Button"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_enter_record" />

    <ImageButton
        android:id="@+id/generateRecordButton"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_below="@id/enterRecordButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/rounded_crop"
        android:contentDescription="Generate Record Button"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_generate_record" />

</RelativeLayout>
